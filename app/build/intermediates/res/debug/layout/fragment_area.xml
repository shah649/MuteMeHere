<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@drawable/bg"
    >

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtlat"
        android:layout_alignBottom="@+id/txtlat"
        android:layout_alignRight="@+id/textView2"
        android:text="Latitude "
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtlong"
        android:layout_alignBottom="@+id/txtlong"
        android:layout_alignRight="@+id/TextView02"
        android:text="Longitude "        
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/txtlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtlong"
        android:layout_alignLeft="@+id/txtlocation"
        android:layout_marginBottom="22dp"
        android:background="@drawable/txt_bd2"
        android:ems="10" />

    <EditText
        android:id="@+id/txtlong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtlat"
        android:layout_centerVertical="true"
        android:background="@drawable/txt_bd2"
        android:ems="10" />

    <EditText
        android:id="@+id/txtlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtlat"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/txt_bd2"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/btnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignRight="@+id/btnview"
        android:layout_below="@+id/txtlong"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_simple_pressed"
        android:text="Get Current Location" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtlocation"
        android:layout_alignBottom="@+id/txtlocation"
        android:layout_toLeftOf="@+id/txtlocation"
        android:text="Name "
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnClear"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_alignLeft="@+id/txtlong"
        android:background="@drawable/btn_simple_pressed"
        android:text="Save" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnClear"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_alignRight="@+id/txtlong"
        android:background="@drawable/btn_simple_pressed"
        android:text="view" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLocation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnAdd"
        android:background="@drawable/btn_simple_pressed"
        android:text="Clear" />

</RelativeLayout><!-- From: file:/D:/Old%20stuff/Final%20Project/MuteMeHere/app/src/main/res/layout/fragment_area.xml -->